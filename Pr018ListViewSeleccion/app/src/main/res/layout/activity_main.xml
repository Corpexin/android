<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colorcab"
        android:id="@+id/tvPregunta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvListaRespuesta"
        android:layout_below="@+id/tvPregunta"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnComprobar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comprobar"
        android:id="@+id/btnComprobar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num5"
        android:id="@+id/tvContador"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnComprobar"
        android:layout_toStartOf="@+id/btnComprobar"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num50"
        android:id="@+id/tvPuntuacion"
        android:layout_alignBottom="@+id/tvContador"
        android:layout_toRightOf="@+id/btnComprobar"
        android:layout_toEndOf="@+id/btnComprobar"
        android:textSize="30sp" />

</RelativeLayout>
