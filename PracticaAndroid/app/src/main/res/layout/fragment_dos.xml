<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.corpex.practicaandroid.DosFragment"
    android:padding="8dp">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivImagenAlumno"
            android:layout_centerHorizontal="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad:"
                android:id="@+id/tvEd"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:id="@+id/tvEdad"
                android:layout_alignBaseline="@+id/tvEd"
                android:layout_alignBottom="@+id/tvEd"
                android:layout_toRightOf="@+id/tvEd"
                android:layout_toEndOf="@+id/tvEd"
                android:textSize="20dp"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="años"
                android:id="@+id/tvAños"
                android:textSize="20dp"
                android:layout_alignTop="@+id/tvEdad"
                android:layout_toRightOf="@+id/tvEdad"
                android:layout_toEndOf="@+id/tvEdad"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:layout_alignBaseline="@+id/tvEdad"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad:"
                android:id="@+id/tvCd"
                android:textSize="20dp"
                android:layout_below="@+id/tvEdad"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="16dp"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:id="@+id/tvCiudad"
                android:paddingLeft="8dp"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/tvCd"
                android:layout_toRightOf="@+id/tvCd"
                android:layout_toEndOf="@+id/tvCd"
                android:layout_alignBaseline="@+id/tvCd"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:id="@+id/tvCl"
                android:textSize="20dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:layout_below="@+id/tvCd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:id="@+id/tvCalle"
                android:paddingLeft="8dp"
                android:textSize="20dp"
                android:layout_alignBaseline="@+id/tvCl"
                android:layout_alignBottom="@+id/tvCl"
                android:layout_toRightOf="@+id/tvCl"
                android:layout_toEndOf="@+id/tvCl"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono:"
                android:id="@+id/tvtf"
                android:textSize="20dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:layout_below="@+id/tvCalle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999999999"
                android:id="@+id/tvTelefono"
                android:paddingLeft="8dp"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/tvtf"
                android:layout_toRightOf="@+id/tvtf"
                android:layout_toEndOf="@+id/tvtf"
                android:layout_alignBaseline="@+id/tvtf"
                android:paddingBottom="16dp"
                style="@style/Base.TextAppearance.AppCompat.Body2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
