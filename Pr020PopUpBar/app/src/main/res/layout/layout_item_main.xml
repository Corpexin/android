<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/card_padding"
        android:paddingBottom="@dimen/card_padding">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Baldomero Llégate Ligero"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/tvEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="22 años"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_below="@+id/tvNombre"
            android:layout_alignRight="@+id/tvNombre"
            android:layout_alignEnd="@+id/tvNombre"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagPopUpMenu"
            android:layout_alignBottom="@+id/tvEdad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="280dp"
            android:layout_marginStart="280dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvEdad"
            android:layout_alignEnd="@+id/tvEdad"
            android:src="@drawable/ic_action_name" />

    </RelativeLayout>
</android.support.v7.widget.CardView>